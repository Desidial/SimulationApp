<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.simulationapp.SimulationController">
    <!-- Верхняя панель с кнопками управления -->
    <top>
        <HBox spacing="10" alignment="CENTER">
            <Button text="Start (B)" fx:id="startButton" onAction="#startSimulation"/>
            <Button text="Stop (E)" fx:id="stopButton" onAction="#stopSimulation"/>
        </HBox>
    </top>

    <!-- Центральная панель с Canvas для визуализации -->
    <center>
        <Canvas fx:id="canvas" width="800" height="600"/>
    </center>
</BorderPane>
